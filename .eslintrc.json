{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "arrow-body-style": ["error", "as-needed"],
        "no-console": "warn",
        "comma-dangle": "off",
        "@typescript-eslint/comma-dangle": "off",
        "indent": "off",
        "@typescript-eslint/indent": "off"
    }
}
